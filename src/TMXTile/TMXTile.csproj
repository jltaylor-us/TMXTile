<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>TMXTile</AssemblyName>
    <RootNamespace>TMXTile</RootNamespace>
    <Version>1.5.9</Version>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <Authors>Platonymous</Authors>

    <Description>Load tmx files with xTile</Description>

    <Copyright>Copyright 2019</Copyright>

    <PackageProjectUrl>https://https://github.com/Platonymous/TMXTile/</PackageProjectUrl>

    <PackageIcon />

    <PackageIconUrl>https://raw.githubusercontent.com/Platonymous/TMXTile/master/assets/tmxtiled-icon.png</PackageIconUrl>

    <RepositoryUrl>https://https://github.com/Platonymous/TMXTile/</RepositoryUrl>

    <RepositoryType>GitHub</RepositoryType>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <PackageId>Platonymous.TMXTile</PackageId>

    <Product>Platonymous.TMXTile</Product>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="xTile" HintPath="lib\xTile.dll" Private="false" />
  </ItemGroup>
</Project>
